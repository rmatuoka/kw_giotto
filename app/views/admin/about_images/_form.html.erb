<%= form_for ([:admin, @about_image], :html => { :multipart => :true }) do |f|%>
  <%= f.error_messages %>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image%>
  </p>
  <%if @about_image.image.file?%>
  <p>
    <%= image_tag(@about_image.image.url(:thumb))%>
  </p>
  <% end %>
  <p><%= f.submit :class => "button" %></p>
<% end %>
