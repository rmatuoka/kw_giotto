<%content_for :head do%>
<%= stylesheet_link_tag "home"%>
<%= stylesheet_link_tag "work"%>
<% end %>  
  
    <div class="cont_box_left work_box_left">
        <p class="cont_box_text_h1">
            <%= t("work_title")%>
        </p>
        <p class="cont_box_text_p">
            <%= t("work_body").html_safe%>
        </p>
    </div>
    <div class="cont_box_right work_box_right">
          <%= form_for([@contact], :url => works_work_path(@contact), :html => { :multipart => :true, :id=>"work_form"}) do |f| %>
              <div class="eight columns">
                <%= f.label :name, :class => "right inline", :style=> "float:left" %>
				<%= f.text_field :name, :style=> "float:right; width:230px;" %>
               </div>
              <div class="four  columns">
                <%= f.label :email, :class => "right inline", :style=> "float:left"%>
                <%= f.text_field :email, :style=> "float:right; width:230px;"%>
              </div>
              <div class="four columns">
                <%= f.label :phone, :class => "right inline", :style=> "float:left"%>
                <%= f.text_field :phone, :style=> "float:right; width:230px;"%>
              </div>
              <div class="clear"></div>
              <div class="four columns">
                <%= f.label :state, :class => "right inline", :style=> "float:left"%>
                <%= f.select(:state,options_for_select([['AC'],['AL'],['AP'],['AM'],['BA'],['CE'],['DF'],['ES'],['GO'],['MA'],['MT'],['MS'],['MG'],['PA'],['PB'],['PR'],['PE'],['PI'],['RJ'],['RN'],['RS'],['RO'],['RR'],['SC'],['SP'],['SE'],['TO']]), :class => "five", :prompt=>true)%>
              </div>
              <div class="clear"></div>
              <div class="four columns">
                <%= f.label :message, :class => "right inline", :style=> "float:left"%>
                <%= f.text_area :message, :style=> "float:right; width:230px !important;"%>
              </div>
              <div class="four columns">
                <%= f.label :file, :class => "right inline", :style=> "float:left"%>
                <%= f.file_field :file, :style=> "float:right; width:230px !important;"%>
              </div>
              <div class="clear"></div>
              <div class="four columns">
              </div>
              <div class="eight  columns">
                <%= image_submit_tag("bt_enviar_contato.jpg", :style=> "float:right; width:230px !important;")%>
              </div>          
          <% end %>
    </div>
<script>
	$('#work_form').validate({
		rules: {
			"contact[name]":  {required: true,minlength: 2},
			"contact[email]": {required: true,email: true},
			"contact[phone]": {required: true,minlength: 13},
			"contact[message]": {required: true,minlength: 5},
			"contact[state]" : {required: true}
		},
		messages: {
			"contact[name]":{required: "<%= t("msg_validate.name_required")%>", minlength: "<%= t("msg_validate.name_minlength")%>"},
			"contact[email]":{required: "<%= t("msg_validate.email_required")%>",email: "<%= t("msg_validate.email_email")%>"},
			"contact[phone]":{required: "<%= t("msg_validate.phone_required")%>",minlength: "<%= t("msg_validate.phone_minlength")%>"},
			"contact[message]":{required: "<%= t("msg_validate.message_required")%>",minlength: "<%= t("msg_validate.message_minlength")%>"},
			"contact[state]":{required: "<%= t("msg_validate.state_required")%>"}
		},
		errorPlacement: function(error,element){
	    	error.insertAfter(element);
	    	//alert(error.html());
		},
		showErrors: function(errorMap, errorList){
			this.defaultShowErrors();
		}
	});
</script>
