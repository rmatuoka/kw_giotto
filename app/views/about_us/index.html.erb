<%content_for :head do%>
<%= stylesheet_link_tag "a_giotto"%>
<%=stylesheet_link_tag "/fancybox/jquery.fancybox.css"%>
<%=javascript_include_tag "jquery.fancybox.pack.js"%>
<%=javascript_include_tag "jquery.fancybox.js"%>
<script type="text/javascript">
$(document).ready(function() {
<% if !browser.mobile? %>		
	$('#scrollbar1').tinyscrollbar();
	$(window).resize(function(){
	$('#scrollbar1').tinyscrollbar_update();
	});	

		
	$('.slideshow').cycle({ 
		fx:     'fade', 
        slideResize: false,
        fit: 1,			
		prev:   '#prev', 
		next:   '#next',  
		timeout: 0 
	});
	  
  $(".fancybox").fancybox({
    'transitionIn'	:	'fade',
		'transitionOut'	:	'fade',
		'speedIn'		:	600, 
		'speedOut'		:	200, 
		'overlayShow'	:	false
    });
<% end %>  
});
</script>
<%end%>
<div class="container "  id="content">
    <div class="left_container six columns">
        <div class="title_container">
            <h1 class="title_left_container"><%= t("about_us_title")%></h1>
        </div>
        <div class="text_container">
            <div id="scrollbar1">
                <div class="scrollbar" style="height: 389px;"><div class="track" style="height: 389px;"><div class="thumb" style="top: 0px; height: 127.05373635600336px;"><div class="end"></div></div></div></div>
                <div class="viewport">
                    <div class="overview" style="top: 0px;">
                       <%= t("about_us_body").html_safe%>
                    </div>
                </div>
            </div>        
    
        </div>
    </div>
<% if !browser.mobile? %>	
    <div class="right_container six columns">
		<div class="img_container">
			<div id="prev"></div>
			<div id="next"></div>	
			<div class="slideshow" style="position: relative; width: 461px; height: 320px; overflow: hidden;">
			<% @about_images.each do |i|%>
				<%= link_to(image_tag(i.image("small")), i.image("large"), :class => "fancybox", :rel => "group")%>
			<% end %>
			</div>
		</div>     
	</div>
<% end %>
</div>
