<%= image_tag ("bt_close_prod.png"), :class => "bt_close_prod"%>
    <div class="content_area">
        <div class="box_area">
            <div class="box_area_left">
                <% if @product_images.count > 1%>
                <div id="prev2"></div>
            	<div id="next2"></div>
              <% end %>
                <div class="slideshow2" style="position: relative; width: 250px; height: 390px; overflow: hidden;">   	
                    <% @product_images.each do |images| %>
                      <table height="390" style="border-style:none;display:table !important;">
                        <tr>
                          <td align="center" valign="middle" style="vertical-align:middle !important;">
                          <%=link_to(image_tag(images.image("rotative")), images.image.url, :class => "fancybox", :rel => @product.code)%>
                          </td>
                        </tr>
                      </table>
                    <% end %>
                </div>   
                <span class="text_vjaimg"><%= t("product_descriptions.zoom")%></span> 
            </div>
	        <div class="box_area_right">
	            <p class="title_prod"><%= product.name%></p>
	            <p class="text_prod"><%= product.description %></p>
	            <p class="title_spec"><%= t("product_descriptions.title")%>:</p>
	            <p class="text_prod"><b><%= t("product_descriptions.code")%>: </b><%= product.code %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.code_ean")%>: </b><%= product.ean %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.code_dun")%>: </b><%= product.dun %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.net_weight")%>: </b><%= product.weight %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.total_weight")%>: </b><%= product.total_weight %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.cubic_capacity")%>: </b><%= format("%.4f",product.cubage) %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.quantity")%>: </b><%= product.amount %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.dimensions")%>: </b><%= product.dimensions %></p>
	            <p class="text_prod"><b><%= t("product_descriptions.color")%>: </b><%= product.color %></p>
	        </div>
        </div>
    </div>
