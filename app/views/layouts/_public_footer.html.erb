<div  id="box_contact" class="contato_box" style="display: none;">
    <div class="cont_box_left ">
        <p class="cont_box_text_h1">
            <%= t("contact_title")%>
        </p>
        <p class="cont_box_text_p">
			<%= t("contact_body").html_safe	%>
        </p>
    </div>
    
    <div class="cont_box_right ">
        
          <%= form_for @contact, :url => home_create_path(@contact), :remote => true do |f| %>
              <div class="four columns">
                <%= f.label  :name, :class => "right inline"%>
                </div>
              <div class="eight  columns">
                <%= f.text_field :name, :class => "five"%>
              </div>
              <div class="four  columns">
                <%= f.label  :email, :class => "right inline"%>
              </div>
              <div class="eight  columns">
                <%= f.text_field :email, :class => "five"%>
              </div>
              <div class="four columns">
                <%= f.label  :phone, :class => "right inline"%>
              </div>
              <div class="eight  columns">
                <%= f.text_field :phone, :class => "five"%>
              </div>
              <div class="four columns">
                <%= f.label  :message, :class => "right inline"%>
              </div>
              <div class="eight columns">
                <%= f.text_area :message, :class => "five"%>
              </div>
              <div class="four columns">
              </div>
              <div class="eight  columns">
                <%= submit_tag t("send"), :class => "botao"%>
              </div>          
          <% end %>
    </div>
</div>

<script>
	/* Mascaras personalizadas */ 
	$.mask.masks = $.extend($.mask.masks,{
	   phone_sp:{ mask: '(99) 99999-9999'}
	});

	(function($){
	   $(function(){
	       $('input:text').setMask();
	        /* Personalização para celulares de SP*/
	       $('#contact_phone').keydown(function(event) {
	             // Act on the event
	             if($(this).val().substring(1,6) == '11) 9'){
	                 $(this).attr('alt','phone_sp');
	             }else{
	                 $(this).attr('alt','phone');
	            }
	           $(this).setMask();
	       });
	   });
	})($);

	$('#new_contact').validate({
		rules: {
			"contact[name]":  {required: true,minlength: 2},
			"contact[email]": {required: true,email: true},
			"contact[phone]": {required: true,minlength: 13},
			"contact[message]": {required: true,minlength: 5}
		},
		messages: {
			"contact[name]":{required: "<%= t("msg_validate.name_required")%>", minlength: "<%= t("msg_validate.name_minlength")%>"},
			"contact[email]":{required: "<%= t("msg_validate.email_required")%>",email: "<%= t("msg_validate.email_email")%>"},
			"contact[phone]":{required: "<%= t("msg_validate.phone_required")%>",minlength: "<%= t("msg_validate.phone_minlength")%>"},
			"contact[message]":{required: "<%= t("msg_validate.message_required")%>",minlength: "<%= t("msg_validate.message_minlength")%>"}
		},
		errorPlacement: function(error,element){
	    	error.insertAfter(element);
	    	//alert(error.html());
		},
		showErrors: function(errorMap, errorList){
			this.defaultShowErrors();
		}
	});
</script>
	</div>
