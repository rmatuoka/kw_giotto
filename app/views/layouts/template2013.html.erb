<!DOCTYPE html>

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />
  <title><%= content_for?(:title) ? "Giotto - " + yield(:title) : "Giotto" %></title>  
  <!-- Included CSS Files (Uncompressed) -->
  
  <!-- Included CSS Files (Compressed) -->
  <%=stylesheet_link_tag "foundation"%>
  <%=stylesheet_link_tag "app"%>
  <%=stylesheet_link_tag "template"%>
  <%=javascript_include_tag :defaults %>
  <%=javascript_include_tag "jquery.validate.min.js"%>
  <%=javascript_include_tag "jquery.meio.mask.js"%>
  <%=javascript_include_tag "modernizr.foundation" %>
  <%=stylesheet_link_tag "/fancybox/jquery.fancybox.css"%>
	<%=javascript_include_tag "jquery.fancybox.pack.js"%>
	<%=javascript_include_tag "jquery.fancybox.js"%>

<%=yield :head%>   
</head>
<body>
<%=render :file => "layouts/_menu.html.erb"%>  
<%= yield %>
<%=render :file => "layouts/_public_footer.html.erb"%>    

  <!-- Initialize JS Plugins -->
  <script type="text/javascript" src="http://cloud.github.com/downloads/malsup/cycle/jquery.cycle.all.latest.js"></script>
  <%= javascript_include_tag "jquery.tinyscrollbar.min"%>

<script type="text/javascript">
function ajustaTela() {
    height = $(window).height()-$('#footer').height()-$('#header').height()-25;
    $('#content').height(height);
    $('.saiba_mais_container').css('margin-top',$('#content').height() * 0.18);
    $('#content').css('overflow','hidden');
    
}

$(document).ready(function(){
	
<% if !browser.mobile? %>	
	ajustaTela();	
	$(window).resize(function() {
		ajustaTela();
	});
<% end %>

	$('.slideshow').cycle({  
		fx: 'fade', // choose your transition type, ex: fade, scrollUp, shuffle, etc... 
		pager: '#nav',
		sync: true, 
		containerResize: false,
		slideResize: true,
		width: '100%',
		fit: 1,
		speed:2000,
		timeout: 10000	
	});
	
$(".fancybox-media").fancybox({
		maxWidth	: 800,
		maxHeight	: 400,
		fitToView	: false,
		width		: '70%',
		height		: '70%',
		autoSize	: false,
		closeClick	: false,
		openEffect	: 'none',
		closeEffect	: 'none'
	})
    
  $(".contato_box").hide();	
  $("#contato_bt").click(function () {
    if ($(".contato_box").is(":hidden")) {
      $(".contato_box").slideDown("slow");
    } else {
      $(".contato_box").slideUp();
    }
  });
  
  $(".trabalhe_box").hide();	
  $("#trabalhe_bt").click(function () {
    if ($(".trabalhe_box").is(":hidden")) {
      $(".trabalhe_box").slideDown("slow");
    } else {
      $(".trabalhe_box").slideUp();
    }
  });
});
</script>
</div>
</body>
</html>
