$('#container_prod').html("<%=escape_javascript(render('product'))%>");
$(".bt_close_prod").click(function () {
		
      $(".container_prod").fadeOut("slow");
	  
    });
$('.slideshow2').cycle({ 
		fx:     'scrollHorz', 
        slideResize: false,
        fit: 1,			
		prev:   '#prev2', 
		next:   '#next2',  
		timeout: 0 
	});

$(".products_item").click(function () {
      $(".container_prod").show();
      $(".container_prod").fadeIn("slow");
          
    });
