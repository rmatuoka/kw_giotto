      $(".container_prod").fadeOut("slow");
	  
    });

$('.slideshow2').cycle({ 
        fx:     'scrollHorz', 
        slideResize: false,
        fit: 1,                 
        prev:   '.prev2', 
        next:   '.next2',  
        timeout: 0 
        });

$('.slideshow3').cycle({ 
        fx:     'scrollHorz', 
        slideResize: false,
        fit: 1,                 
        prev:   '#prevvv', 
        next:   '#nexxxt',  
        timeout: 0,
        startingSlide: item
        });


